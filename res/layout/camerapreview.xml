<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200px"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"

        android:layout_height="200px" android:weightSum="1">
    <FrameLayout
            android:layout_width="100px"
            android:layout_height="100px"

            >
        <SurfaceView
                android:id="@+id/cpPreview"
                android:layout_width="1720dp"
                android:layout_height="1080dp"
                android:layout_gravity="center" android:onClick="takePicture" android:clickable="false">

        </SurfaceView>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/overlayText">
            <TextView
                    android:layout_width="261dp"
                    android:layout_height="122dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="What is up yo"
                    android:id="@+id/textView" android:textSize="40dp"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>